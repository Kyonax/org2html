{
  "name": "@kyonax/org2html",
  "version": "1.0.0",
  "description": "Production-ready Org-mode to HTML parser with Vue 3 component support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "org2html": "./dist/cli/index.mjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "org-mode",
    "parser",
    "html",
    "vue3",
    "static-site-generator"
  ],
  "author": "Cristian D. Moreno - Kyonax",
  "license": "LGPL-3.0-only",
  "files": [
    "dist",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  }

  "dependencies": {
    "commander": "^11.1.0",
    "chokidar": "^3.5.3",
    "probe-image-size": "^7.2.3",
    "shiki": "^0.14.5",
    "dompurify": "^3.0.6",
    "jsdom": "^23.0.1",
    "slugify": "^1.6.6",
    "fast-glob": "^3.3.2",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "vitest": "^4.0.8",
    "sharp": "^0.33.0"
  },
  "optionalDependencies": {
    "sharp": "^0.33.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
